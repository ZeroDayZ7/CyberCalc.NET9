<!-- Definicja zasobów aplikacji -->
<Application x:Class="WPF_CALC_NET_9.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <sys:String x:Key="AppVersion">v2.1.7</sys:String>
            <sys:String x:Key="AppTitle">CYBERPUNK CALC</sys:String>
            <!-- Włączanie motywów z folderu Styles -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/Cyberpunk.xaml" />
                <ResourceDictionary Source="Styles/CommonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>