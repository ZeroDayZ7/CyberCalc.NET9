<UserControl x:Class="WPF_CALC_NET_9.Controls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="35">
    <Border Background="{DynamicResource NeonGroupBoxHeaderBackground}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="0,0,0,1">
        <TextBlock Text="{Binding HeaderText, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Foreground="{DynamicResource NeonGroupBoxForeground}"
                   FontFamily="Consolas"
                   FontSize="16"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontWeight="Bold">
            <TextBlock.Effect>
                <BlurEffect Radius="0.5"/>
            </TextBlock.Effect>
        </TextBlock>
    </Border>
</UserControl>
