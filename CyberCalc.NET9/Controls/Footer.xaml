<UserControl x:Class="WPF_CALC_NET_9.Controls.Footer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_CALC_NET_9.Controls">
    <Border Background="{DynamicResource NeonGroupBoxHeaderBackground}" 
            BorderBrush="{DynamicResource BorderBrush}" 
            BorderThickness="0,1,0,0"
            Padding="0,10">
        <Grid>
            <!-- Scan Lines Effect -->
            <Rectangle Opacity="0.1">
                <Rectangle.Fill>
                    <VisualBrush TileMode="Tile" Viewport="0,0,2,4" ViewportUnits="Absolute">
                        <VisualBrush.Visual>
                            <Rectangle Width="2" Height="4">
                                <Rectangle.Fill>
                                    <LinearGradientBrush>
                                        <GradientStop Color="#00FFFF" Offset="0"/>
                                        <GradientStop Color="Transparent" Offset="0.5"/>
                                        <GradientStop Color="Transparent" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                        </VisualBrush.Visual>
                    </VisualBrush>
                </Rectangle.Fill>
            </Rectangle>

            <!-- Close Button -->
            <local:CloseButton HorizontalAlignment="Center" VerticalAlignment="Center" Panel.ZIndex="1"/>
        </Grid>
    </Border>
</UserControl>
