<Window x:Class="WPF_CALC_NET_9.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_CALC_NET_9.Controls"
        xmlns:helpers="clr-namespace:WPF_CALC_NET_9.Helpers"
        helpers:DragBehavior.IsDraggable="True"
        Title="About"
        Height="380"
        Width="460"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="5">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <local:Header HeaderText="[ ABOUT ]"
                          Grid.Row="0" />
            <!-- Main Content -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Margin="15">
                <!-- App Info -->
                <TextBlock Style="{StaticResource NeonText}"
                           FontSize="18"
                           Margin="0,5">
                    <Run Text="{StaticResource AppTitle}" />
                    <Run Text="{StaticResource AppVersion}" />
                </TextBlock>
                <TextBlock Text="[ DEVELOPER_ID: ZERODAYZ7 ]"
                           Style="{StaticResource NeonText}"
                           FontSize="18"
                           Margin="0,10,0,5" />
                <TextBlock Text="DIGITAL_WORLDS // CYBERPUNK // AI_SYSTEMS"
                           Style="{StaticResource NeonText}"
                           FontSize="14"
                           Margin="0,5,0,15" />
                <!-- Connection Grid -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!-- lewa kolumna -->
                        <ColumnDefinition Width="*" />
                        <!-- prawa kolumna -->
                    </Grid.ColumnDefinitions>
                    <!-- Left Panel - Labels -->
                    <Grid Grid.Column="0"
                          HorizontalAlignment="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="GITHUB:"
                                   Style="{StaticResource NeonText}"
                                   FontSize="16"
                                   Grid.Row="0"
                                   HorizontalAlignment="Right" />
                        <TextBlock Text="PORTFOLIO:"
                                   Style="{StaticResource NeonText}"
                                   FontSize="16"
                                   Grid.Row="1"
                                   HorizontalAlignment="Right" />
                        <TextBlock Text="EMAIL:"
                                   Style="{StaticResource NeonText}"
                                   FontSize="16"
                                   Grid.Row="2"
                                   HorizontalAlignment="Right" />
                    </Grid>
                    <!-- Right Panel - Links -->
                    <Grid Grid.Column="1"
                          HorizontalAlignment="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="github.com/ZeroDayZ7"
                                   FontFamily="Consolas"
                                   FontSize="16"
                                   Style="{StaticResource NeonText}"
                                   Cursor="Hand"
                                   Grid.Row="0"
                                   MouseDown="OpenLink_MouseDown"
                                   Tag="https://github.com/ZeroDayZ7"
                                   HorizontalAlignment="Left" />
                        <TextBlock Text="portfolio_repo"
                                   FontFamily="Consolas"
                                   FontSize="16"
                                   Style="{StaticResource NeonText}"
                                   Cursor="Hand"
                                   Grid.Row="1"
                                   MouseDown="OpenLink_MouseDown"
                                   Tag="https://zerodayz7.github.io/portfolio/"
                                   HorizontalAlignment="Left" />
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="zerodayz7@proton.me"
                                       FontFamily="Consolas"
                                       FontSize="16"
                                       Style="{StaticResource NeonText}"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"
                                       MouseDown="OpenLink_MouseDown"
                                       Tag="mailto:zerodayz7@proton.me"
                                       Grid.Column="0"
                                       HorizontalAlignment="Left" />
                            <TextBlock Text="COPY"
                                       FontFamily="Consolas"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Style="{StaticResource HeaderTextStyle}"
                                       Cursor="Hand"
                                       VerticalAlignment="Center"
                                       Margin="5,0,0,0"
                                       MouseDown="CopyEmail_MouseDown"
                                       Grid.Column="1" />
                        </Grid>
                    </Grid>
                </Grid>
            </StackPanel>
            <!-- Footer -->
            <local:Footer Grid.Row="2" />
        </Grid>
    </Border>
</Window>