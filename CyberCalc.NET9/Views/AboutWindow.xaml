<Window x:Class="WPF_CALC_NET_9.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        WindowStyle="None"
        AllowsTransparency="True">

    <Border Background="{DynamicResource WindowBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2" CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.7"/>
        </Border.Effect>

        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <!-- Nagłówek -->
                <RowDefinition Height="*"/>
                <!-- Treść -->
                <RowDefinition Height="50"/>
                <!-- Przycisk zamykania -->
            </Grid.RowDefinitions>

            <!-- Nagłówek (dragable) -->
            <Border Grid.Row="0" Background="#FF1E2A38" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <TextBlock Text="ABOUT CYBERPUNK CALC" Foreground="#FFD0D0D0"
                           FontFamily="Consolas" FontWeight="Bold" FontSize="14" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Border>

            <!-- Treść okna -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="CYBERPUNK CALC v1.0.4" Foreground="{DynamicResource TextColor}" 
                           FontFamily="Consolas" FontSize="14" TextAlignment="Center" Margin="0,5"/>
                <TextBlock Text="Created by ZeroDayZ7" Foreground="{DynamicResource TextColor}" 
                           FontFamily="Consolas" FontSize="14" TextAlignment="Center" Margin="0,5"/>
                <TextBlock Text="© 2025" Foreground="{DynamicResource TextColor}" 
                           FontFamily="Consolas" FontSize="14" TextAlignment="Center" Margin="0,5"/>
            </StackPanel>

            <!-- Przycisk zamknięcia -->
            <Button Grid.Row="2" Content="CLOSE" Width="100" Height="30" HorizontalAlignment="Center" 
                    Style="{StaticResource CyberButton}" Click="Close_Click" Margin="0,10"/>
        </Grid>
    </Border>
</Window>
