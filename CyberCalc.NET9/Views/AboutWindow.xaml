<Window x:Class="WPF_CALC_NET_9.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_CALC_NET_9.Controls"
        Title="Settings"
        Height="250"
        Width="350"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="2"
            CornerRadius="8">
        <Border.Effect>
            <DropShadowEffect Color="Black"
                              BlurRadius="15"
                              ShadowDepth="5"
                              Opacity="0.7" />
        </Border.Effect>
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="35" />
                <!-- Nagłówek -->
                <RowDefinition Height="*" />
                <!-- Treść -->
                <RowDefinition Height="50" />
                <!-- Przycisk zamykania -->
            </Grid.RowDefinitions>
            <!-- Nagłówek (dragable) -->
            <local:DraggableHeader Grid.Row="0" HeaderText="ABOUT" />
            <!-- Treść okna -->
            <StackPanel Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">
                <TextBlock Foreground="{DynamicResource TextColor}"
                           FontFamily="Consolas"
                           FontSize="14"
                           TextAlignment="Center"
                           Margin="0,5">
                    <Run Text="{StaticResource AppTitle}" />
                    <Run Text="{StaticResource AppVersion}" />
                </TextBlock>
                <TextBlock Text="Created by ZeroDayZ7"
                           Foreground="{DynamicResource TextColor}"
                           FontFamily="Consolas"
                           FontSize="14"
                           TextAlignment="Center"
                           Margin="0,5" />
                <TextBlock Text="© 2025"
                           Foreground="{DynamicResource TextColor}"
                           FontFamily="Consolas"
                           FontSize="14"
                           TextAlignment="Center"
                           Margin="0,5" />
            </StackPanel>
            <!-- Przycisk zamknięcia -->
            <local:CloseButton Grid.Row="2" />
        </Grid>
    </Border>
</Window>