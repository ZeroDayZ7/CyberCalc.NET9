<Window x:Class="WPF_CALC_NET_9.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPF_CALC_NET_9.Controls"
        xmlns:helpers="clr-namespace:WPF_CALC_NET_9.Helpers"
        helpers:DragBehavior.IsDraggable="True"
        Title="Settings"
        Height="380"
        Width="460"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True">
    <Border Background="{DynamicResource WindowBackground}"
            BorderBrush="{DynamicResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="5">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="40" />
                <RowDefinition Height="*" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <local:Header HeaderText="[ SETTINGS ]"
                          Grid.Row="0" />
            <!-- Main Content -->
            <StackPanel Grid.Row="1"
                        Margin="20"
                        VerticalAlignment="Top">
                <!-- Theme Section -->
                <GroupBox Header="THEME_SELECTION"
                          Style="{StaticResource NeonGroupBox}">
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button Content="CYBERPUNK"
                                Command="{Binding ThemeCommand}"
                                CommandParameter="Cyberpunk"
                                Style="{StaticResource NeonThemeButton}"
                                ToolTip="Activate cyberpunk theme" />
                        <Button Content="DARK"
                                Command="{Binding ThemeCommand}"
                                CommandParameter="Dark"
                                Style="{StaticResource NeonThemeButton}"
                                ToolTip="Activate dark theme" />
                        <Button Content="LIGHT"
                                Command="{Binding ThemeCommand}"
                                CommandParameter="Light"
                                Style="{StaticResource NeonThemeButton}"
                                ToolTip="Activate light theme" />
                    </StackPanel>
                </GroupBox>
                <!-- History Section -->
                <GroupBox Header="HISTORY_MANAGEMENT"
                          Style="{StaticResource NeonGroupBox}">
                    <StackPanel HorizontalAlignment="Center">
                        <Button Content="WIPE_HISTORY"
                                Style="{StaticResource NeonClearButton}"
                                Click="ClearHistory_Click"
                                ToolTip="Clear all calculation history" />
                        <TextBlock Text="[ PERMANENT_OPERATION ]"
                                   Foreground="{DynamicResource NeonClearForeground}"
                                   FontSize="10"
                                   Margin="0,5,0,0"
                                   FontStyle="Italic"
                                   Opacity="0.7" />
                    </StackPanel>
                </GroupBox>
            </StackPanel>
            <!-- Footer -->
            <local:Footer Grid.Row="2" />
        </Grid>
    </Border>
</Window>