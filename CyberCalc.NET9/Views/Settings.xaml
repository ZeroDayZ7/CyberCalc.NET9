<!-- Definicja okna ustawień w stylu cyberpunkowym -->
<Window x:Class="WPF_CALC_NET_9.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}" WindowStyle="None" AllowsTransparency="True">
    <!-- Główny kontener okna z zaokrąglonymi rogami -->
    <Border Background="{DynamicResource WindowBackground}" CornerRadius="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="5" Opacity="0.8"/>
        </Border.Effect>
        <!-- Siatka główna okna ustawień -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <!-- Nagłówek -->
                <RowDefinition Height="*"/>
                <!-- Sekcje ustawień -->
                <RowDefinition Height="40"/>
                <!-- Przycisk zamknięcia -->
            </Grid.RowDefinitions>
            <!-- Nagłówek z tytułem -->
            <TextBlock Text="Ustawienia kalkulatora" Foreground="{DynamicResource TextColor}"
                       FontFamily="Consolas" FontSize="16" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>
            <!-- Sekcje ustawień -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <!-- Sekcja wyboru motywu -->
                <GroupBox Header="Motyw" Foreground="{DynamicResource TextColor}" BorderBrush="{DynamicResource CyberSecondaryBrush}">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="Cyberpunk" Command="{Binding ThemeCommand}" CommandParameter="Cyberpunk"
                                Style="{StaticResource CyberButton}" Margin="5"/>
                        <Button Content="Dark" Command="{Binding ThemeCommand}" CommandParameter="Dark"
                                Style="{StaticResource CyberButton}" Margin="5"/>
                        <Button Content="Legacy" Command="{Binding ThemeCommand}" CommandParameter="Legacy"
                                Style="{StaticResource CyberButton}" Margin="5"/>
                    </StackPanel>
                </GroupBox>
                <!-- Sekcja czyszczenia historii -->
                <GroupBox Header="Historia" Foreground="{DynamicResource TextColor}" BorderBrush="{DynamicResource CyberSecondaryBrush}">
                    <Button Content="Wyczyść historię" Style="{StaticResource ClearButton}" Click="ClearHistory_Click" Margin="5"/>
                </GroupBox>
            </StackPanel>
            <!-- Przycisk zamknięcia -->
            <Button Grid.Row="2" Content="Zamknij" Style="{StaticResource CyberButton}" Click="Close_Click" Margin="5" HorizontalAlignment="Right" Width="100"/>
        </Grid>
    </Border>
</Window>