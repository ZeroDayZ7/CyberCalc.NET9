<Window x:Class="WPF_CALC_NET_9.Views.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource WindowBackground}" WindowStyle="None" AllowsTransparency="True">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Styles/SettingsStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Border Background="{DynamicResource WindowBackground}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2" CornerRadius="8">
		<Border.Effect>
			<DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="5" Opacity="0.7"/>
		</Border.Effect>
		<Grid Margin="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="35"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="50"/>
			</Grid.RowDefinitions>
			<!-- Nagłówek -->
			<Border Grid.Row="0" Background="#FF1E2A38" MouseLeftButtonDown="Header_MouseLeftButtonDown">
				<TextBlock Text="SETTINGS" Foreground="#FFD0D0D0"
                           FontFamily="Consolas" FontWeight="Bold" FontSize="14"
                           VerticalAlignment="Center" HorizontalAlignment="Center"/>
			</Border>
			<!-- Treść okna -->
			<StackPanel Grid.Row="1" Margin="10" VerticalAlignment="Top">
				<!-- Sekcja wyboru motywu -->
				<GroupBox Header="Motyw" Foreground="{DynamicResource TextColor}" BorderBrush="{DynamicResource CyberSecondaryBrush}" Margin="0,5">
					<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
						<Button Content="Cyberpunk" Command="{Binding ThemeCommand}" CommandParameter="Cyberpunk"
                                Style="{StaticResource SettingsButton}" Margin="5" BorderThickness="0" Padding="5"/>
						<Button Content="Dark" Command="{Binding ThemeCommand}" CommandParameter="Dark"
                                Style="{StaticResource SettingsButton}" Margin="5" BorderThickness="0" Padding="5"/>
						<Button Content="Legacy" Command="{Binding ThemeCommand}" CommandParameter="Legacy"
                                Style="{StaticResource SettingsButton}" Margin="5" BorderThickness="0" Padding="5"/>
					</StackPanel>
				</GroupBox>
				<!-- Sekcja czyszczenia historii -->
				<GroupBox Header="Historia" Foreground="{DynamicResource TextColor}" BorderBrush="{DynamicResource CyberSecondaryBrush}" Margin="0,5">
					<Button Content="Wyczyść historię" Style="{StaticResource SettingsClearButton}" Click="ClearHistory_Click" Margin="5"/>
				</GroupBox>
			</StackPanel>
			<!-- Przycisk zamknięcia -->
			<Button Grid.Row="2" Content="CLOSE" Width="100" Height="30" HorizontalAlignment="Center"
                    Style="{StaticResource SettingsButton}" Click="Close_Click" Margin="0,10"/>
		</Grid>
	</Border>
</Window>