<!-- Colors.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Kolory bazowe -->
    <Color x:Key="ColorPrimary">#1ABC9C</Color>
    <Color x:Key="ColorSecondary">#3498DB</Color>
    <Color x:Key="ColorTertiary">#9B59B6</Color>
    <Color x:Key="ColorAccent">#E74C3C</Color>
    <Color x:Key="ColorBackground">#E74C3C</Color>
    <Color x:Key="ColorForeground">#FFFFFF</Color>
    <Color x:Key="ColorBorder">#555555</Color>

    <!-- Pędzle do użycia w stylach -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource ColorPrimary}" />
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource ColorSecondary}" />
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource ColorTertiary}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource ColorAccent}" />
    <SolidColorBrush x:Key="WindowBackground" Color="{StaticResource ColorBackground}" />
    <SolidColorBrush x:Key="TextColor" Color="{StaticResource ColorForeground}" />
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource ColorBorder}" />

</ResourceDictionary>
